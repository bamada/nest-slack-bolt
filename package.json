{
  "name": "nestjs-slack-bolt",
  "version": "1.1.1",
  "description": "A NestJS module for seamless integration with Slack using the Bolt SDK",
  "author": "bamada",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/bamada/nest-slack-bolt#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bamada/nest-slack-bolt"
  },
  "keywords": [
    "nestjs",
    "slack",
    "bolt",
    "api",
    "integration",
    "webhook"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublishOnly": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "release": "release-it",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0 || ^10.1.3",
    "@nestjs/config": "3.2.3",
    "@nestjs/core": "^9.0.0 || ^10.1.3",
    "@slack/bolt": "3.21.1",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-angular": "19.4.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@nestjs/cli": "10.4.5",
    "@nestjs/schematics": "10.1.4",
    "@nestjs/testing": "10.4.1",
    "@release-it/conventional-changelog": "^8.0.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.16.4",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.4.0",
    "@typescript-eslint/parser": "8.4.0",
    "eslint": "9.9.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "globals": "^15.9.0",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "release-it": "^17.0.0",
    "rimraf": "^6.0.0",
    "rxjs": "7.8.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.1.3",
    "@nestjs/core": "^9.0.0 || ^10.1.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
